@model Ihale_Uygulamasi.Models.ihale_hareket_tablosu

@{
    ViewBag.Title = "TeklifVer";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["id"] == null)
    {
        Response.Redirect("~/GirisYap/GirisYap");
    }
}

@using (Html.BeginForm())
 {
    <div class="iletisim" style="padding-bottom: 340px" align="center">
        <div class="container-fluid" id="container">
            <div class="row">
                <div class="col-md-5">
                    @Html.HiddenFor(model => model.ihale_id)
                    @Html.HiddenFor(model => model.musteri_id, new { @Value = Session["id"] })
                    @Html.HiddenFor(model => model.aktif, new { @Value = "1" })
                </div>

                <br />
                <div class="col-md-2">
                    <p style="font-size: 19px; padding-top: 280px">Teklifiniz Nedir?</p>
                    @Html.EditorFor(model => model.teklif_fiyati, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.teklif_fiyati, "", new { @class = "text-danger" })
                </div>

                <br />
                <div class="col-md-5">

                </div>
            </div>

            <div class="form-group" style="padding-top: 85px">
                <div class="col-md-offset-2 col-md-10">
                    <input style="background-color:#FB5369;border:1px solid #FB5369; width:200px; height:45px; color:white; font-size:20px;" type="submit" value="Teklif Ver" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
 }

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>