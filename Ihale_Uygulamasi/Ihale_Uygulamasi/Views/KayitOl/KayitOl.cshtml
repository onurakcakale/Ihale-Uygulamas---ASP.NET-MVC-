@model Ihale_Uygulamasi.Models.musteri_tablosu
@{
    ViewBag.Title = "KayitOl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .field-validation-error 
    {
        color: darkred;
    }
</style>

@using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="iletisim" style="padding-top:50px">
            <div class="container-fluid" id="container">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div style="align-content:center;"><h1 style="font-family:Muli, sans-serif; text-align:center; font-size: 40px;"><b>Kayıt Ol</b></h1></div>

                        <div style="padding-top: 20px; align-content: center; padding-bottom: 10px" align="center">
                            <label class="field-validation-error" style="color: darkred; text-align: center;" align="center">@Html.DisplayFor(model => model.KayitOlError)</label>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-3">
                    </div>

                    <div class="col-sm-12 col-md-3" style="padding-bottom: 20px;">
                        <div class="login-sign">
                            <div style="margin: auto">
                                <form action="#" method="post">
                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px;"><h8 style="color: red">*</h8>Ad:</p>
                                        <div style="width: 100%">
                                            @Html.EditorFor(model => model.musteri_adi, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.musteri_adi)
                                        </div>
                                    </div>

                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 38px;"><h8 style="color: red">*</h8>Soyad:</p>
                                        <div style="width: 100%">
                                            @Html.EditorFor(model => model.musteri_soyadi, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.musteri_soyadi)
                                        </div>
                                    </div>

                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 20px;">T.C Kimlik Numarası:</p>
                                        <div style="width: 100%">
                                            @Html.EditorFor(model => model.tc, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.tc)
                                        </div>
                                    </div>

                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 20px;">Firma Adı: </p>
                                        <div style="width: 100%">
                                            @Html.EditorFor(model => model.firma_adi, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.firma_adi)
                                        </div>
                                    </div>

                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 20px;">Telefon:</p>
                                        <div style="width: 100%">
                                            @Html.EditorFor(model => model.telefon, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.telefon)
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>

                    <div class="col-sm-12 col-md-3" style="padding-bottom: 95px;">
                        <div class="login-sign">
                            <div style="margin: auto">
                                <form action="#" method="post">

                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px;"><h8 style="color: red">*</h8>Adres:</p>
                                        <div style="width: 100%;">
                                            @Html.TextAreaFor(model => model.adres, new { @class = "form-control", cols = "100", rows = "6" })
                                            @Html.ValidationMessageFor(model => model.adres)
                                        </div>
                                    </div>

                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 20px;"><h8 style="color: red">*</h8>E-Posta:</p>
                                        <div style="width: 100%">
                                            @Html.EditorFor(model => model.e_posta, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.e_posta)
                                        </div>
                                    </div>

                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 20px;"><h8 style="color: red">*</h8>Kullanıcı Adı:</p>
                                        <div style="width: 100%">
                                            @Html.EditorFor(model => model.kullanici_adi, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.kullanici_adi)
                                        </div>
                                    </div>

                                    <div>
                                        <p style="font-family: Muli, sans-serif; font-size: 18px; margin-top: 20px;"><h8 style="color: red">*</h8>Şifre:</p>
                                        <div style="width: 100%">
                                            @Html.EditorFor(model => model.sifre, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.sifre)
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-3">
                    </div>

                    <div class="col-sm-12 col-md-12">
                        <div class="form-group" align="center" style="padding-bottom: 30px">
                            <div class="col-md-offset-2 col-md-10">
                                <input style="background-color:#FB5369;border:1px solid #FB5369; width:200px; height:45px; color:white; font-size:20px;" type="submit" value="Kayıt Ol" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 }